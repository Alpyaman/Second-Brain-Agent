# ==============================================================================
# Second Brain Agent - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ==============================================================================
# API Keys (at least one is required)
# ==============================================================================

# Google AI (Gemini) API Key
# Get it from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (optional)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional)
# Get it from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==============================================================================
# Model Settings
# ==============================================================================

# Default LLM model to use
# Options: gemini-pro, gemini-1.5-pro, gpt-4, gpt-3.5-turbo, claude-3-opus
DEFAULT_MODEL=gemini-pro

# Embedding model for vector search
# Options: sentence-transformers/all-MiniLM-L6-v2, sentence-transformers/all-mpnet-base-v2
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ==============================================================================
# Generation Settings
# ==============================================================================

# Maximum tokens for LLM generation (1-100000)
MAX_TOKENS=4096

# Temperature for generation (0.0-2.0, lower = more focused, higher = more creative)
TEMPERATURE=0.7

# Top-p sampling parameter (0.0-1.0)
TOP_P=0.9

# ==============================================================================
# Path Settings
# ==============================================================================

# Directory for generated projects
OUTPUT_DIR=./output

# ChromaDB storage directory
CHROMA_DB_DIR=./src/data/chroma_db

# Directory for notes/documents
NOTES_DIR=./src/data/notes

# Cache directory for LLM responses
CACHE_DIR=./cache

# Directory for log files
LOG_DIR=./logs

# ==============================================================================
# ChromaDB Settings
# ==============================================================================

# ChromaDB collection name
COLLECTION_NAME=second_brain_notes

# Chunk size for document splitting (100-10000)
CHUNK_SIZE=1000

# Overlap between chunks (0-1000)
CHUNK_OVERLAP=200

# ==============================================================================
# Cache Settings
# ==============================================================================

# Enable response caching (true/false)
ENABLE_CACHE=true

# Cache TTL in hours
CACHE_TTL_HOURS=24

# ==============================================================================
# Logging Settings
# ==============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable file logging (true/false)
LOG_TO_FILE=true

# ==============================================================================
# Code Generation Settings
# ==============================================================================

# Default backend framework
# Options: fastapi, django, flask
DEFAULT_FRAMEWORK=fastapi

# Default frontend framework
# Options: react, vue, angular, nextjs
DEFAULT_FRONTEND=react

# Include test files in generated code (true/false)
INCLUDE_TESTS=true

# Include Docker configuration (true/false)
INCLUDE_DOCKER=true

# ==============================================================================
# Development Settings
# ==============================================================================

# Enable debug mode (true/false)
DEBUG_MODE=false

# Enable verbose output (true/false)
VERBOSE=false
